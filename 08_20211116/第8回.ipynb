    "from functools import reduce\n",
    "\n",
    "\n",
    "def countryroad(houses, n):\n",
    "    distances = []\n",
    "    for a, b in zip(houses, houses[1:]):\n",
    "        distances.append(b - a)\n",
    "    distances.sort()\n",
    "    for _ in range(n-1):\n",
    "        distances.pop()\n",
    "    return sum(distances)\n",
    "\n",
    "countryroad([10, 30, 40, 70, 100], 2)"
   ]
